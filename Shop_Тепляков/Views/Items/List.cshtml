@model IEnumerable<Shop_Тепляков.Data.Models.Items>

@{
    Layout = "_Layout";
}
<h2>Все предметы</h2>
@{
    foreach(var item in Model)
    {
        <div class="item">
            <img src="@item.Img"/>
            <div class="data">
                <h3>Модель: @item.Name</h3>
                <p>Цена: @item.Price.ToString("c")</p>
                <p>Категория @item.Category.Name</p>
                <div>Описание: @item.Description</div>
            </div>
        </div>
    }
}